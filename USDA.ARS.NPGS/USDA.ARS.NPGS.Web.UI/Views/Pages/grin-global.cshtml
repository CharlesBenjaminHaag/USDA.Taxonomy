<script type="text/javascript">
    $(document).ready(function () {
        init();

        // Hide error Notification if user interacts with page
        $('input, textarea, select').on('input change', hideErrorSection);
        $('form').on('click', hideErrorSection);

        // Configure search-results datatable(s).
        const table = $('#search-results-table').DataTable({
        data: [],
        deferLoading: 0,
        columns: [
            {
                data: 'accession_identifier',
                render: function (data, type, row) {
                    if (type === 'display') {
                        return `<a href="https://npgsweb.ars-grin.gov/gringlobal/accessiondetail?id=${row.accession_id}" target="_blank">${data}</a>`;
                    }
                    return data; // For other types (e.g. filter, sort), return raw text
                }
            },
            { data: 'plant_name' },
            {
                data: 'taxonomy_species_name',
                render: function (data, type, row) {
                    if (type === 'display') {
                        return `<a href="https://npgsweb.ars-grin.gov/gringlobal/taxon/taxonomydetail?id=${row.taxonomy_species_id}" target="_blank">${data}</a>`;
                    }
                    return data; // For other types (e.g. filter, sort), return raw text
                }
            },
            { 
                data: 'source_country_name' 
            },
            {
                data: 'genebank_name',
                render: function (data, type, row) {
                    if (type === 'display') {
                        return `<a href="https://npgsweb.ars-grin.gov/gringlobal/site?id=${row.genebank_id}" target="_blank">${data}</a>`;
                    }
                    return data; // For other types (e.g. filter, sort), return raw text
                }
            },
            { data: 'source_type' },
            { data: 'improvement_level' },
            {
                data: 'availability_status',
                render: function (data, type, row) {
                    if (type === 'display') {
                        let color = data === 'Available' ? 'green' : 'red';
                        return `<span style="display:inline-block;padding:2px 8px;border-radius:4px;background-color:${color};color:white;font-weight:bold;">${data}</span>`;
                    }
                    return data;
                }
            }
        ]
    });

    function init() {
        hideErrorSection();
        getGenebanks();
        getCountries();
    }

    function hideErrorSection() {
        $('#error-alert').hide();
    }

    function getGenebanks() {
        $.ajax({
            url: 'https://npgstest.ars-grin.gov/NPGS/api/v1/site/all',
            type: 'GET',
            success: function (data) {
                var $select = $('#genebank_id');
                $select.empty(); // Clear existing

                // Add "None" option
                $select.append($('<option>', {
                    value: '',
                    text: 'None'
                }));

                // Add data options
                $.each(data, function (index, item) {
                    $select.append($('<option>', {
                        value: item.site_id,
                        text: item.full_name
                    }));
                });
            },
            error: function (xhr, status, error) {
                console.error("Error loading genebanks:", error);
                $('#error-alert-text').html('<option>Error loading</option>');
            }
        });
    }

    function getCountries() {
        $.ajax({
            url: 'https://npgstest.ars-grin.gov/NPGS/api/v1/geography/countries',
            type: 'GET',
            success: function (data) {
                    var $select = $('#country_of_origin');
                $select.empty(); // Clear existing

                // Add "None" option
                $select.append($('<option>', {
                    value: '',
                    text: 'None'
                }));

                // Add data options
                $.each(data, function (index, item) {
                    $select.append($('<option>', {
                        value: item.country_code,
                        text: item.country_name
                    }));
                });
            },
            error: function (xhr, status, error) {
                console.error("Error loading genebanks:", error);
                $('#error-alert-text').html('<option>Error loading</option>');
            }
        });
    }
    
    // Function to collect form input values into a plain object
    function collectFormData($form) {
        const data = {};

        $form.find('input, select, textarea').each(function () {
            const $input = $(this);
            const key = $input.attr('name') || $input.data('name');

            if (key) {
                data[key] = $input.val();
                //debug
                //console.log(`DEBUG Collected data: ${key} = ${data[key]}`);

            }
        });
        return data;
    }

    // Function to reset form and clear DataTable
    function resetFormAndTable() {
        $('#search-form-grin-global-accessions')[0].reset(); // native DOM reset for inputs
        table.clear().draw();
    }

    // Search button event handler
    $('#search-button').on('click', function () {
        //e.preventDefault();

        const formData = collectFormData($("#search-form-grin-global-accessions"));

        $('#overlay').show();
        $('#search-status').text('');

        $.ajax({
            url: 'https://npgstest.ars-grin.gov/NPGS/api/v1/accession/search', // Replace with your actual API endpoint
            method: 'GET',       // Or 'POST' if needed
            data: formData,
            dataType: 'json',
            success: function (response) {
            table.clear().rows.add(response).draw();

            if (response && response.length > 0) {
                    $('#row-count-heading').text(`${response.length} record(s) found.`);
            } else {
                    $('#row-count-heading').text('🚫 No records found.');
            }

            },
            error: function (xhr, status, error) {
                // $('#error-alert-text').html('❌ An error occurred while searching: ' + status + error);
                $('#error-alert').show();
                $('#overlay').hide();
                resetFormAndTable();
            },
            complete: function () {
                $('#overlay').hide();
            }
        });
    });

    // Reset button event handler
    $('#reset-button').on('click', function () {
        resetFormAndTable();
    });

    const tabs = document.querySelectorAll('[role="tab"]');

    tabs.forEach(tab => {
        tab.addEventListener('click', () => {
            tabs.forEach(t => {
                t.classList.add('usa-button--outline');
                t.setAttribute('aria-selected', 'false');
                document.getElementById(t.getAttribute('aria-controls')).hidden = true;
            });

            tab.classList.remove('usa-button--outline');
            tab.setAttribute('aria-selected', 'true');
            document.getElementById(tab.getAttribute('aria-controls')).hidden = false;
        });
    });
});
</script>