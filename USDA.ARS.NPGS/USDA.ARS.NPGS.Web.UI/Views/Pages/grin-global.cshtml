<script>
        $(document).ready(function () {
      // Initialize the DataTable (empty for now)
      const table = $('#results-table').DataTable({
        data: [],
        columns: [
          { data: 'firstName' },
          { data: 'lastName' },
          { data: 'age' }
        ]
      });

      // Function to collect form input values into a plain object
      function collectFormData($form) {
        const data = {};

        $form.find('input, select, textarea').each(function () {
          const $input = $(this);
          const key = $input.attr('name') || $input.data('name');

          if (key) {
            data[key] = $input.val();
          }
        });

        return data;
      }

      // Function to reset form and clear DataTable
      function resetFormAndTable() {
        $('#search-form')[0].reset(); // native DOM reset for inputs
        table.clear().draw();
      }

      // Submit handler
      $('#search-form').on('submit', function (e) {
        e.preventDefault();

        const formData = collectFormData($(this));

        $.ajax({
          url: '/api/search', // Replace with your actual API endpoint
          method: 'GET',       // Or 'POST' if needed
          data: formData,
          dataType: 'json',
          success: function (response) {
            table.clear().rows.add(response).draw();
          },
          error: function (xhr, status, error) {
            alert('An error occurred during the search: ' + error);
          }
        });
      });

      // Reset button handler
      $('#reset-button').on('click', function () {
        resetFormAndTable();
      });
    });

    //  Customization Notes

    // If your API expects a POST, change method: 'GET' to POST and add contentType: 'application/json' with data: JSON.stringify(formData).

    // If your DataTables columns are dynamic or come from the API, you can programmatically build the columns array.

    // You can support other input types (checkboxes, radios, selects) by extending the collectFormData function.
</script>